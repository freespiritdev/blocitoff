<h1>Edit Task List</h1>

<div class="col-md-8">
 <%= form_for @task do |f| %>
   <div class="form-group">
     <%= f.label :name, 'Update task' %>
     <%= f.text_area :name, rows: 1, class: 'form-control', placeholder: "Enter task" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>
</div>
